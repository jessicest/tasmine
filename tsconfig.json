{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "lib": [ "ES2020", "DOM" ],
        "noFallthroughCasesInSwitch": true,
        "outDir": "lib",
        "removeComments": true,
        "rootDir": "src",
        "strict": true,
        "target": "ES2019"
    },
    "include": [
        "src/**/*"
    ]
}
