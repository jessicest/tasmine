{
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [ "ES2019", "DOM" ],
        "module": "ES2015",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "outDir": "lib",
        "removeComments": true,
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "target": "ES2019"
    },
    "include": [
        "src/**/*"
    ]
}
