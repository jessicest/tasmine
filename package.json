{
  "name": "tasmine",
  "version": "1.0.0",
  "description": "",
  "main": "lib/tasmine.js",
  "type": "module",
  "dependencies": {
    "@testdeck/mocha": "^0.2.0",
    "@types/jest": "^27.4.0",
    "chai": "^4.3.4",
    "jest": "^27.4.7",
    "mocha": "^9.1.4",
    "nyc": "^15.1.0",
    "ts-jest": "^27.1.3",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.4.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.2",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "build": "tsc --build && bash reimport",
    "clean": "tsc --build --clean && bash reimport",
    "rebuild": "tsc --build --clean && tsc --build && bash reimport",
    "reimport": "bash reimport",
    "run": "node lib/index.js",
    "test": "jest --no-cache",
    "test-esm": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js -c=jest-esm.config.js --no-cache",
    "test-isolated": "jest -c=jest-isolated.config.js --no-cache",
    "test-esm-isolated": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js -c=jest-esm-isolated.config.js --no-cache",
    "view": "light-server -s . -p 8080 -o \\html\\index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jessicest/tasmine.git"
  },
  "author": "Jessica Knight",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jessicest/tasmine/issues"
  },
  "homepage": "https://github.com/jessicest/tasmine#readme",
  "jest": {
    "modulePaths": [
        "<rootDir>/src/"
    ],
    "preset": "ts-jest",
    "testMatch": [ "**/test/**/*.[jt]s?(x)" ],
    "globals": {
      "ts-jest": {
          "useESM": true
      }
    }
  }
}
